<span class="label tiny alert"><%= @player.style %></span>
<% if @top10.include?(@player) %>
<span class="label tiny alert">SEVA Top 10</span>
<% end %>
<% if @top100.include?(@player) %>
<span class="label tiny alert">SEVA Top 100</span>
<% end %>
</br>
<div class="clearfix">
  <div class="label alert right">
    <p style="font-size: 2.5em;"><strong><%= @player.seva_score_c %></strong></p>
    <p style="margin-top: -30px; margin-bottom: 5px; font-size: .8em;">SEVA Score</p>
  </div>
  <div class="left">
    <span class="main-title" style="font-size: 2em;"><strong><%= @player.name %></strong></span> <span><%= @player.hsclass %></span>
    <p style="margin-top: -10px;"><%= @player.high_school %>, <%= @player.st %></p>
    <p style="margin-top: -25px;"><strong><%= @player.committed_to %></strong></p>
  </div>
</div>

<%#= (@player.height / 12) %><%#= @player.height % 12 %>
<%#= @player.position %>
  
  

<div class="progress small-12 large-12 columns">
  <span class="meter text-center" style="width:<%= @player.seva_score_c * 10%>%"><p style="color: white; font-size: .75em;"> <%= @player.seva_score_c %> SEVA Score</p></span>
</div>
<% if @player.espn > 0 %>
<div class="progress small-12 large-12 columns">
  <span class="meter text-center" style="width:<%= @player.espn %>%"><p style="color: white; font-size: .75em;"> <%= @player.espn %> ESPN Rating</p></span>
</div>
<% else %>
<div class="progress small-12 large-12 columns secondary">
  <span class="meter text-center" style="width: 100%"><p style="color: white; font-size: .75em;"> No ESPN Rating</p></span>
</div>
<% end %>
<% if @player.scout > 0 %>
<div class="progress small-12 large-12 columns">
  <span class="meter text-center" style="width:<%= @player.scout * 20 %>%"><p style="color: white; font-size: .75em;"> <%= @player.scout %> Star Scout Rating</p></span>
</div>
<% else %>
<div class="progress small-12 large-12 columns secondary">
  <span class="meter text-center" style="width: 100%"><p style="color: white; font-size: .75em;"> No Scout Rating</p></span>
</div>
<% end %>
<% if @player.rivals > 0 %>
<div class="progress small-12 large-12 columns">
  <span class="meter text-center" style="width:<%= @player.rivals * 20 %>%"><p style="color: white; font-size: .75em;"> <%= @player.rivals %> Star Rivals Rating</p>
  </span>
</div>
<% else %>
<div class="progress small-12 large-12 columns secondary">
  <span class="meter text-center" style="width: 100%"><p style="color: white; font-size: .75em;"> No Rivals Rating</p>
  </span>
</div>
<% end %>

  

<ul class="tabs small-12 large-12 columns" style="margin-top: 35px;" data-tab>
  <% if @player.hsclass <= '2015' %> 
    <li class="tab-title active"><a href="#panel1"><strong>Senior</strong></a></li>
    <li class="tab-title"><a href="#panel2"><strong>Junior</strong></a></li>
    <li class="tab-title"><a href="#panel3"><strong>Sophomore</strong></a></li>
    <li class="tab-title"><a href="#panel4"><strong>Freshman</strong></a></li>
  <% elsif @player.hsclass <= '2016' %>
    <li class="tab-title active"><a href="#panel2">Junior</a></li>
    <li class="tab-title"><a href="#panel3">Sophomore</a></li>
    <li class="tab-title"><a href="#panel4">Freshman</a></li>
  <% elsif @player.hsclass <= '2017' %>
    <li class="tab-title active"><a href="#panel3">Sophomore</a></li>
    <li class="tab-title"><a href="#panel4">Freshman</a></li>
  <% elsif @player.hsclass <= '2018' %>
    <li class="tab-title active"><a href="#panel4">Freshman</a></li>
  <% end %>
</ul>
<div class="tabs-content">
  <% if @player.hsclass <= '2015' %>
    <div class="content active" id="panel1" style="margin-top: 10px;">
  <% else %>
    <div class="content" id="panel1" style="margin-top: 10px;">
  <% end %>
    <div class="row">
     <% if @player.hsclass <= '2015' && @player.ppgsr > 0 %> 
     <table class="large-12 columns">
        <thead>
          <tr>
            <th>PPG</th>
            <th>APG</th>
            <th>RPG</th>
            <th>BPG</th>
            <th>SPG</th>
            <th>FG</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> <%= @player.ppgsr %></td>
            <td> <%= @player.apgsr %></td>
            <td> <%= @player.rpgsr %></td>
            <td> <%= @player.bpgsr %></td>
            <td> <%= @player.spgsr %></td>
            <td> <%= @player.fgpsr %></td>
          </tr>
        </tbody>
      </table> 
      <% else %>
        <p class="text-center">Sorry, we don't have <%= @player.name %>'s stats for this season</p>
      <% end %>
    </div>
  </div>
  <% if @player.hsclass <= '2016' && @player.hsclass != '2015' %>
    <div class="content active" id="panel2" style="margin-top: 10px;">
  <% else %>
    <div class="content" id="panel2" style="margin-top: 10px;">
  <% end %>
    <div class="row"> 
      <% if @player.hsclass <= '2016' %>
      <table class="large-12 columns">
        <thead>
          <tr>
            <th>PPG</th>
            <th>APG</th>
            <th>RPG</th>
            <th>BPG</th>
            <th>SPG</th>
            <th>FG</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> <%= @player.ppgj %></td>
