<div class="row">
  <div class="panel large-8 large-centered columns">
  <h2 class="center">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="small-12 large-11 large-centered columns ">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    </div>

    <div class="small-12 large-11 large-centered columns ">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)" %>
    </div>

    <div class="small-12 large-11 large-centered columns ">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
    </div>
    <div class="small-12 large-11 large-centered columns "> 
      <%= f.submit "Sign up", class: "small button alert expand" %>
    </div>

  <% end %>
  <div class="small-12 large-11 columns">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>