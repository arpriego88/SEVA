
  <div class="row">
     <% @thebest.each do |player| %>
    <div class="small-12 medium-4 large-4 columns">
      <div class="panel">
        <div class="clearfix">
          <div class="label alert right">
            <p style="font-size: 1.5em; color: white;"><strong><%= player.seva_score_c %></strong></p>
            <p style="margin-top: -25px; margin-bottom: 5px; font-size: .5em; color: white;">SEVA Score</p>
          </div>
          <div class="left">
            <span style="font-size: 0.9em;"><strong><%= link_to player.name, player_path(player) %></strong></span> <span><%= player.hsclass %></span>
            <p style="margin-top: -10px;"><strong><%= player.committed_to %></strong></p>
          </div>
        </div> 
      </div>
    </div>
    <% end %>
  </div>

  

  <%= link_to 'See All', players_path, class: "small button primary" %>
