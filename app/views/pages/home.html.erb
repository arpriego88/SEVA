
  <div class="jumbotron">
    <div class="center">
      <h1>Good Morning, Campers</h1>
      <h5>today is evaluation day. Key word 'value'.</h5>
      <h5>Do you have any? Probably not.</h5>
    </div>
  </div>
  
  <div class="row">
     <% @thebest.each do |player| %>
    <div class="small-12 medium-4 large-4 columns">
      <div class="panel">
          <div class="panel-body">
          <span><%= link_to player.name, player_path(player) %></span> |
          <span><%= player.st %></span> |
          <span><%= player.seva_score %></span> 
          <P><%= player.hsclass %></p>
          <P><%= player.height %></p>
          <P><%= player.ppg %></p>
          <P><%= player.apg %></p>
          <P><%= player.rpg %></p>
          <P><%= player.win %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <%= link_to 'See All', players_path, class: "small button primary" %>
